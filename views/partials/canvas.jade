if painting
  div(class="item middleContainer")
    div(class="canvas grid middleItem" data-painting-id="#{id}")
      - var count = 0;
      - for (var row = 0; row < canvasX; row++)
        div(class="row")
          - for (var col = 0; col < canvasY; col++)
              div(class="canvasCell" id="canvas_#{row}#{col}" style={background: "#{painting[count]}"})
              - count++;
    div(class="buttons middleItem")
      include ./buttons.jade

else
  div(class="item middleContainer")
    div(class="canvas grid middleItem")
      - for (var row = 0; row < canvasX; row++)
        div(class="row")
          - for (var col = 0; col < canvasY; col++)
            div(class="canvasCell" id="canvas_#{row}#{col}")
    div(class="buttons middleItem")
      include ./buttons.jade
